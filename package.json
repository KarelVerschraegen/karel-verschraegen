		"@vercel/node": "^2.15.10",
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"tailwind-merge": "^1.14.0"
	},
	"devDependencies": {
		"@remix-run/dev": "^1.19.3",
		"@remix-run/eslint-config": "^1.19.3",
		"@tailwindcss/typography": "^0.5.10",
		"@types/react": "^18.2.21",
		"@types/react-dom": "^18.2.7",
		"autoprefixer": "^10.4.15",
		"concurrently": "^7.6.0",
